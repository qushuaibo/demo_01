/* pages/posts/posts.wxss */
swiper{
    width: 100%;
    height: 700rpx;
}
swiper image{
    width: 100%;
    height: 700rpx;
}
/* 从整体到局部 */
.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top:2px solid #ededed;
    border-bottom:2px solid #ededed;
    padding-bottom: 10rpx;
}

.post-author-date{
    /* margin-top: 10rpx;
    margin-bottom: 20rpx;
    margin-left: 10rpx; */
    /* margin 上右下左 顺时针 */
    margin: 10rpx 0 20rpx 10rpx;
    /* 利用flex去居中 */
    display: flex;
    flex-direction: row;
    align-items: center;
}
.post-author
{
    width: 60rpx;
    height: 60rpx;
}
.post-date{
    margin-left: 20rpx;
    font-size: 26rpx;
}
.post-title{
    font-size: 34rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    color: #333;
}

.post-image{
    width: 100%;
    height: 700rpx;
    margin-bottom: 30rpx;
}

.post-content{
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    line-height: 40rpx;
}
.post-like{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 20rpx;
}
.post-like-image{
    margin-left: 16rpx;
}
/* html字体图表 */
.post-like-font{
    margin-left: 20rpx;
    font-size: 26rpx;
}