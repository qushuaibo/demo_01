.container{
    display: flex;
    flex-direction: column;

}

.head-image{
    width: 100%;
    height: 700rpx;
}
.author-data{
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
    margin-left: 30rpx;
    align-items: center;
}

.avatar{
    width: 64rpx;
    height: 64rpx;
}

.author{
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    color: #666;
}
.const-text
{
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
}
.date{
    font-size: 24rpx;
    margin-left: 30rpx;
    color: #666;
}
.title{
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    letter-spacing: 2px;
    color: #45566c;
}
.horizon{
    width: 660rpx;
    height: 1px;
    background-color: #e5e5e5;
    position: absolute;
    z-index: -999;
}

.circle{
    width: 660rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}
.circle image{
    width: 90rpx;
    height: 90rpx;
}
.share-img
{
    margin-left: 30rpx;
}
/* 
 felx-direction的方向就是主轴方向
 align-items 子元素在交叉轴
 justify-content 主轴
 */
.tool{
    display: flex;
    flex-direction: column; 
    align-items: center;
    justify-content: center;
}
